<Window x:Class="WpfMenuExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Меню в WPF" Height="350" Width="525">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Файл">
                <MenuItem Header="_Открыть"
                          Icon="Images/open-icon.png"  <!-- Иконка -->
                          Command="ApplicationCommands.Open"
                          InputGestureText="Ctrl+O" />
                <MenuItem Header="_Сохранить"
                          Command="ApplicationCommands.Save"
                          InputGestureText="Ctrl+S" />
                <Separator />
                <MenuItem Header="_Выход"
                          Command="ApplicationCommands.Close" />
            </MenuItem>
            <MenuItem Header="_Правка">
                <MenuItem Header="_Отменить" Command="ApplicationCommands.Undo" />
                <MenuItem Header="_Повторить" Command="ApplicationCommands.Redo" />
            </MenuItem>
            <MenuItem Header="_Настройки">
                <MenuItem Header="_Автообновление"
                          IsCheckable="True"
                          IsChecked="True"
                          Click="AutoRefresh_Click" />
            </MenuItem>
        </Menu>
        <Grid>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">
                В этом окне находится меню с командами и чекбоксами.
            </TextBlock>
        </Grid>
    </DockPanel>
</Window>
